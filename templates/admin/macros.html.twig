{% macro paginate(pagination) %}
    {# @var pagination \App\Application\Paginator\PaginatorInterface #}

    {% if pagination.canPaginate %}
        <nav aria-label="Pagination">
            <ul class="pagination">
                <li class="page-item {{ not pagination.hasPreviousPage ? 'disabled' : '' }}">
                    {% if pagination.hasPreviousPage %}
                        <a class="page-link" href="{{ pagination_item_url(pagination.previousPage) }}">Previous</a>
                    {% else %}
                        <a disabled="" class="page-link" href="#">Previous</a>
                    {% endif %}
                </li>
                {% if pagination.hasPreviousPage %}
                    <li class="page-item"><a class="page-link" href="#">{{ pagination.previousPage }}</a></li>
                {% endif %}

                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="#">{{ pagination.currentPage }}</a>
                </li>

                {% if pagination.hasNextPage %}
                    <li class="page-item"><a class="page-link" href="#">{{ pagination.nextPage }}</a></li>
                {% endif %}

                <li class="page-item {{ not pagination.hasNextPage ? 'disabled' : '' }}">
                    {% if pagination.hasNextPage %}
                        <a class="page-link" href="{{ pagination_item_url(pagination.nextPage) }}">Next</a>
                    {% else %}
                        <a class="page-link" href="#">Next</a>
                    {% endif %}
                </li>
            </ul>
        </nav>
    {% endif %}
{% endmacro paginate %}
