{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="mx-3 mt-3">
        <div class="row">
            <div class="col-lg-4">
                <h1>Posts list</h1>
            </div>
            <div class="col-lg-8 align-self-center">
                <a class="btn btn-primary float-end" href="#">Add a new post</a>
            </div>
        </div>

        <div class="card border border1 border-dark bg-light">
            <div class="card-body">

                <div class="row">
                    <div class="col mx-2">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered rounded">
                                <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Published at</th>
                                    <th>Author</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for post in posts %}
                                    <tr>
                                        <td>{{ post.title }}</td>
                                        <td>{{ post.publishedAt|date('Y-m-d') }}</td>
                                        <td>{{ post.author.email() }}</td>
                                        <td></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
